{
  "manifest_version": 3,
  "name": "Notes App",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["static/js/content.js"],
      "css": ["static/css/style.css"]
    }
  ],
  "background": {
    "service_worker": "static/js/background.js"
  },
  "permissions": ["activeTab", "tabs", "storage", "cookies"],
  "action": {
    "default_popup": "templates/popup.html"
  }
}
